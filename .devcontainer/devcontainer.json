{
  "name": "Jekyll Codespace",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.2",
  "forwardPorts": [4000],
  "containerEnv": {
    "BUNDLE_PATH": "vendor/bundle"
  },
  "mounts": [
    "source=bundle-cache,target=${containerWorkspaceFolder}/vendor/bundle,type=volume"
  ],
  "postCreateCommand": "bundle install",
  "postAttachCommand": "bundle exec jekyll serve --host 0.0.0.0 --port 4000 --livereload",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "rebornix.ruby",
        "wingrunr21.vscode-ruby"
      ]
    }
  }
}
